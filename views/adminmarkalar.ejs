<div class="admin-all-con-extra">
  <%- include('adminnav'); -%>
    <div class="admin-home">
      <% if(sessionFlash) {%>
        <div class="<%=sessionFlash.type %>">
            <%=sessionFlash.message %>
        </div>
        <%}%>
        <div class="d-flex justify-content-between w-100 align-items-center">
          <h3 class="m-4">Markalar</h3>
          <a href="/admin/markaekle" class="btn btn-info mr-5 text-white"> <i class="fa-solid fa-plus mr-1"></i> Yeni Marka Ekle</a>
        </div>
        <table class="table">
            <thead>
                <tr scope="row">
                  <td>Id</td>
                  <td>Resim</td>
                  <td>Marka İsimi</td>
                  <td>Güncelle</td>
                  <td>Sil</td>
                </tr>
            </thead>
            <tbody>

              <% result.forEach(user => { %>
                <tr class="das">
                  <td class="align-middle"><%- user.id%></td>
                  <td class="align-middle table-image"><img width="90px" src="<%- user.markaImage%>" alt=""> </td>
                  <td class="align-middle"><%- user.markaname%></td>
                  <td class="align-middle"><a href="/admin/markaguncelle/<%- user.id%>" class="btn-primary btngüncels" >Güncelle</button></td>
                  <td class="align-middle"><a href="/admin/markasil/<%- user.id%>" class="btn-danger btngüncel">Sil</button></td>
              </tr>
               <% }) %>
              
        </table>
    </div>
  </div>

  <script>
    //Aadmin sayfasındaki menünün listlelerinin olayları BAŞLAR
    var adminMenuLink = document.querySelectorAll(".admin-menu-link");
    adminMenuLink.forEach((e) => {
      var adminMenuIcon = e.querySelector(".admin-menu-effect-icon");
      e.addEventListener("mouseenter", () => {
        adminMenuIcon.style.transform = "translate(0%, 0%) scale(1)";
      });
      e.addEventListener("mouseleave", () => {
        adminMenuIcon.style.transform = "translate(0%, 0%) scale(0)";
      });
    });
    //Aadmin sayfasındaki menünün listlelerinin olayları BİTER
  </script>