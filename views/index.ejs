<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper(".mySwiper", {

        breakpoints: {
            // when window width is >= 480px
            500: {
                slidesPerView: 1,
                spaceBetween: 0,
                slidesPerGroup: 1,
            },
            700: {
                slidesPerView: 2,
                spaceBetween: 0,
                slidesPerGroup: 2,
            },
            1000: {
                slidesPerView: 3,
                spaceBetween: 0,
                slidesPerGroup: 3,
            },
            // when window width is >= 640px
            1300: {
                slidesPerView: 4,
                spaceBetween: 0,
                slidesPerGroup: 4,
            },
            1820: {
                slidesPerView: 5,
                spaceBetween: 0,
                slidesPerGroup: 5,
            }
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });


</script>