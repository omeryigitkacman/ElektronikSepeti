<div class="d-flex justify-content-center align-items-center flex-column w-100">
    <img src="/images/sadasdas.jpg">
    <div class="swiper mySwiper pb-2 w-100">
        <h3 class="m-4">Telefonlar</h3>
        <div class="swiper-wrapper">
            <%result.forEach((e)=>{%>
                <div class="swiper-slide d-flex justify-content-center ">
                    <div class="con-product-all">
                        <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                            <img data-toggle="modal" data-target=".bd-example-modal-xl" onclick="getdetails(<%- e.id%>)"
                                class="product-Img" src="<%-e.urunımage%>" alt=":(" />
                        </div>
                        <p class="product-Title">
                        <div class="text-center">
                            <%- e.urunname%>
                        </div>
                        <div class="text-muted">
                            <%- e.markaname%>
                        </div>
                        <div class="">

                        </div>
                        </p>
                        <h5 class="product-Price">
                            <%- e.para%> TL
                        </h5>
                        <button onclick="addvalat(<%- e.id%>)" class="btn-sepete-ekle"><i
                                class="fa-solid fa-cart-shopping mr-2"></i> Sepete Ekle</button>
                    </div>
                </div>
